{
  "name": "Shop",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "shop_pic": {
      "type": "string"
    },
    "id_card": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "location": {
      "type": "geopoint"
    },
    "bookbank": {
      "type": "string"
    },
    "create_at": {
      "type": "date",
      "default": "$now"
    },
    "update_at": {
      "type": "date"
    },
    "create_by":{
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "status":{
      "type": "string",
      "default": "active"
    }
  },
  "validations": [],
  "relations": {
    "province": {
      "type": "belongsTo",
      "model": "Province",
      "foreignKey": "provinceId"
    },
    "amphur": {
      "type": "belongsTo",
      "model": "Amphur",
      "foreignKey": "amphurId"
    },
    "district": {
      "type": "belongsTo",
      "model": "District",
      "foreignKey": "districtId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
   {
     "accessType": "WRITE",
     "principalType": "ROLE",
     "principalId": "$everyone",
     "permission": "DENY"
   },
   {
    "accessType": "READ",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW"
  },
  {
     "accessType": "WRITE",
     "principalType": "ROLE",
     "principalId": "$owner",
     "permission": "ALLOW"
  }
  ],
  "methods": {}
}
